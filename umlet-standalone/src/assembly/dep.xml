<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/exe</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>launch4j_project.xml</exclude>
				<exclude>Umlet.ico</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/../</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>LICENCE.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>${project.build.finalName}</include>
			</includes>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>/lib/</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<excludes>
				<exclude>*:umlet-res:*</exclude>
			</excludes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<outputFileNameMapping>umlet.jar</outputFileNameMapping>
			<includes>
				<include>*:umlet-standalone:*</include>
			</includes>
		</dependencySet>
		<dependencySet>
			<outputDirectory>/</outputDirectory>
			<unpack>true</unpack>
			<unpackOptions>
				<excludes>
					<exclude>META-INF/**</exclude>
				</excludes>
			</unpackOptions>
			<includes>
				<include>*:umlet-res:*</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
