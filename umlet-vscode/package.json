{
  "name": "umlet",
  "displayName": "UMLet+UME",
  "description": "Free UML Tool for Fast UML Diagrams with Support for UME Artifacts",
  "version": "15.2.0-SNAPSHOT",
  "publisher": "CM",
  "author": {
    "name": "C&M"
  },
  "icon": "icons/UMLet_logo_128x128.png",
  "extensionKind": [
    "ui"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "engines": {
    "vscode": "^1.47.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCustomEditor:uxfCustoms.umletEditor",
    "onCommand:umlet.createNewDiagram",
    "onStartupFinished"
  ],
  "main": "./target/dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "umlet.exportPng",
        "title": "UMLet: Export As PNG.."
      },
      {
        "command": "umlet.exportPdf",
        "title": "UMLet: Export As PDF.."
      },
      {
        "command": "umlet.createNewDiagram",
        "title": "UMLet: Create new diagram"
      },
      {
        "command": "umlet.zoomIn",
        "title": "UMLet: Zoom in"
      },
      {
        "command": "umlet.zoomOut",
        "title": "UMLet: Zoom out"
      },
      {
        "command": "umlet.zoomReset",
        "title": "UMLet: Reset zoom"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+alt+meta+-",
        "mac": "ctrl+alt+cmd+-",
        "command": "umlet.zoomOut"
      },
      {
        "key": "ctrl+alt+meta+[BracketRight]",
        "mac": "ctrl+alt+cmd+[BracketRight]",
        "command": "umlet.zoomIn"
      },
      {
        "key": "ctrl+alt+meta+0",
        "mac": "ctrl+alt+cmd+0",
        "command": "umlet.zoomReset"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "umlet.exportPng"
        },
        {
          "command": "umlet.exportPdf"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "uxfCustoms.umletEditor",
        "displayName": "UMLet",
        "selector": [
          {
            "filenamePattern": "*.uxf"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "UMLet",
      "properties": {
        "umlet.theme": {
          "type": "string",
          "default": "VS Code setting",
          "enum": [
            "VS Code setting",
            "Light theme",
            "Dark theme"
          ],
          "enumDescriptions": [
            "Use the theme set in VS Code",
            "Use the light theme",
            "Use the dark theme"
          ]
        },
        "umlet.debugLevel": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 1,
          "description": "Specifies the granularity of debug messages. 0 = standard, 1 = detailed"
        },
        "umlet.exportScale": {
          "type": "number",
          "default": 4,
          "minimum": 1,
          "markdownDescription": "Defines the scale of exported PNG diagrams"
        },
        "umlet.fontNormal": {
          "title": "Custom Font File for Normal Fonts",
          "type": "string",
          "default": "",
          "description": "Input the absolute path to your font file (.ttf/.otf)"
        },
        "umlet.fontBold": {
          "title": "Custom Font File for Bold Fonts",
          "type": "string",
          "default": "",
          "description": "Input the absolute path to your font file (.ttf/.otf)"
        },
        "umlet.fontItalic": {
          "title": "Custom Font File for Italic Fonts",
          "type": "string",
          "default": "",
          "description": "Input the absolute path to your font file (.ttf/.otf)"
        }
      }
    },
    "languages": [
      {
        "id": "umlet",
        "aliases": [
          "umlet"
        ],
        "extensions": [
          ".uxf"
        ]
      }
    ]
  },
  "scripts": {
    "vsce": "./node_modules/.bin/vsce package -o target/",
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "compile": "tsc -p ./",
    "test-compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "postinstall": "sync-pom-version"
  },
  "devDependencies": {
    "@types/connect": "^3.4.34",
    "@types/file-saver": "^2.0.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.12.54",
    "@types/serve-static": "^1.13.9",
    "@types/vscode": "^1.47.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.2.0",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "vscode-test": "^1.4.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  },
  "dependencies": {
    "atob": "^2.1.2",
    "btoa": "^1.2.1",
    "btob": "^0.1.1",
    "fast-xml-parser": "^3.17.4",
    "file-saver": "^2.0.2",
    "sync-pom-version-to-package": "^1.5.0",
    "vsce": "^1.88.0",
    "connect": "^3.7.0",
    "serve-static": "^1.14.1"
  }
}
